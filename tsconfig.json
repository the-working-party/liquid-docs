{
	"compilerOptions": {
		"target": "ES2024",
		"module": "commonjs",
		"lib": ["ES2024"],
		"outDir": "./",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"noEmitOnError": true,
		"removeComments": false,
		"preserveConstEnums": true
	},
	"include": ["index.ts"],
	"exclude": ["node_modules", "pkg", "tests"]
}
